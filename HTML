        // وظيفة فتح البوابة
        function unlockPortal() {
            const enteredPassword = passwordInput.value.trim();
            
            if (enteredPassword === CORRECT_PASSWORD) {
                // تدوير الباب
                mainDoor.style.transform = 'rotateY(180deg)';
                
                // بعد تأخير بسيط، إخفاء قسم كلمة المرور وإظهار المحتوى الرئيسي
                setTimeout(() => {
                    vaultSection.style.display = 'none';
                    mainContent.style.display = 'block';
                    
                    // تحميل المحتوى
                    loadAIApps();
                    loadGlobalApps();
                    loadApps();
                    loadWebsites();
                    loadLibrary();
                    
                    // عرض رسالة ترحيب
                    alert("مرحبًا بك في Cherrak Infinity ♾️! البوابة المستقبلية مفتوحة الآن.");
                }, 1500);
            } else {
                alert("كلمة المرور غير صحيحة. حاول مرة أخرى.");
                passwordInput.value = '';
                passwordInput.focus();
                
                // تأثير اهتزاز للباب
                mainDoor.style.animation = 'shake 0.5s';
                setTimeout(() => {
                    mainDoor.style.animation = '';
                }, 500);
            }
        }
        
        // تحميل تطبيقات الذكاء الاصطناعي
        function loadAIApps() {
            aiAppsContainer.innerHTML = '';
            
            aiApps.forEach(app => {
                const card = document.createElement('div');
                card.className = 'card';
                card.innerHTML = `
                    <div class="card-icon">${app.icon}</div>
                    <h3 class="card-title">${app.title}</h3>
                    <p class="card-description">${app.description}</p>
                    <a href="#" class="card-link">استكشاف التطبيق</a>
                `;
                aiAppsContainer.appendChild(card);
            });
        }
        
        // تحميل التطبيقات العالمية
        function loadGlobalApps() {
            globalAppsContainer.innerHTML = '';
            
            globalApps.forEach(app => {
                const card = document.createElement('div');
                card.className = 'card';
                card.innerHTML = `
                    <div class="card-icon">${app.icon}</div>
                    <h3 class="card-title">${app.title}</h3>
                    <p class="card-description">${app.description}</p>
                    <a href="#" class="card-link">الدخول إلى التطبيق</a>
                `;
                globalAppsContainer.appendChild(card);
            });
        }
        
        // تحميل التطبيقات
        function loadApps() {
            appsContainer.innerHTML = '';
            
            apps.forEach(app => {
                const card = document.createElement('div');
                card.className = 'card';
                card.innerHTML = `
                    <div class="card-icon">${app.icon}</div>
                    <h3 class="card-title">${app.title}</h3>
                    <p class="card-description">${app.description}</p>
                    <a href="#" class="card-link">استكشاف التطبيق</a>
                `;
                appsContainer.appendChild(card);
            });
        }
        
        // تحميل المواقع
        function loadWebsites() {
            websitesContainer.innerHTML = '';
            
            websites.forEach(website => {
                const card = document.createElement('div');
                card.className = 'card';
                card.innerHTML = `
                    <div class="card-icon">${website.icon}</div>
                    <h3 class="card-title">${website.title}</h3>
                    <p class="card-description">${website.description}</p>
                    <a href="#" class="card-link">زيارة الموقع</a>
                `;
                websitesContainer.appendChild(card);
            });
        }
        
        // تحميل المكتبة
        function loadLibrary() {
            libraryContainer.innerHTML = '';
            
            libraryItems.forEach(item => {
                const libraryItem = document.createElement('div');
                libraryItem.className = 'library-item';
                libraryItem.textContent = item;
                libraryContainer.appendChild(libraryItem);
            });
        }
        
        // إضافة مستمعي الأحداث
        unlockBtn.addEventListener('click', unlockPortal);
        
        passwordInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                unlockPortal();
            }
        });
        
        // التركيز على حقل كلمة المرور عند تحميل الصفحة
        window.addEventListener('load', function() {
            passwordInput.focus();
            
            // إضافة تأثير اهتزاز للباب
            const style = document.createElement('style');
            style.textContent = `
                @keyframes shake {
                    0%, 100% { transform: rotateY(0deg) translateX(0); }
                    10%, 30%, 50%, 70%, 90% { transform: rotateY(0deg) translateX(-10px); }
                    20%, 40%, 60%, 80% { transform: rotateY(0deg) translateX(10px); }
                }
            `;
            document.head.appendChild(style);
        });
    </script>
</body>
</html>
