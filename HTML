<body>
    <div class="login-container">
        <h1 class="login-title">تسجيل الدخول إلى Cherrak Infinity</h1>
        <div class="fingerprint-scanner" id="fingerprintScanner"></div>
        <i class="lock-icon fa fa-lock" aria-hidden="true"></i>
        <input type="password" class="password-input" id="passwordInput" placeholder="كلمة المرور Bismillah" />
        <button class="login-button" onclick="handleLogin()">الدخول</button>
    </div>

    <script>
        function handleLogin() {
            const password = document.getElementById('passwordInput').value;
            if (password === 'Bismillah') {
                alert('🎉 تم الدخول بنجاح باستخدام كلمة المرور!');
                // يمكنك استدعاء الوظائف أو الانتقال إلى صفحة أخرى هنا
            } else {
                alert('❌ كلمة المرور غير صحيحة');
            }
        }

        const fingerprintScanner = document.getElementById('fingerprintScanner');

        fingerprintScanner.addEventListener('click', function() {
            const password = prompt('🔐 أدخل كلمة المرور للدخول:', 'Bismillah');
            if (password === 'Bismillah') {
                alert('🎉 تم الدخول بنجاح باستخدام بصمة الإصبع!');
                // يمكنك استدعاء الوظائف أو الانتقال إلى صفحة أخرى هنا
            } else {
                alert('❌ كلمة المرور غير صحيحة');
            }
        });
    </script>
