<body>

    <div class="container">

        <header>
            <h1>Cherrak Infinity ♾️</h1>
            <p>الواجهة المستقبلية | Core AI Interface</p>
        </header>

        <div id="lock-screen">
            <h2>باب الخزنة: إدخال بيانات الوصول</h2>
            <input type="password" id="pass-input" placeholder="كلمة المرور (Bismillah)">
            <input type="number" id="age-input" placeholder="العمر (أكبر من 12)">
            
            <button class="btn-open" onclick="tryOpen()">فتح / Open</button>
            <button class="btn-owner" onclick="showOwnerLogin()">لوحة المالك / Owner</button>
        </div>

        <div id="owner-login" style="display: none; padding: 20px; text-align: center;">
            <p style="color: red;">أدخل كلمة مرور المالك لتجاوز القيود.</p>
            <input type="password" id="owner-pass-input" placeholder="كلمة مرور المالك">
            <button class="btn-open" onclick="tryOwnerOpen()">دخول المالك</button>
        </div>

        <div id="dashboard">
            <h2 class="section-title">إضافة تطبيق جديد (لوحة المالك)</h2>
            <div class="add-app-form">
                <input type="text" id="app-name-input" placeholder="اسم التطبيق / الموقع">
                <input type="url" id="app-url-input" placeholder="رابط URL (مثال: https://example.com)">
                <button onclick="addApp()">إضافة التطبيق</button>
                <button class="btn-delete" onclick="clearAllApps()">مسح كل التطبيقات المحفوظة</button>
            </div>

            <h2 class="section-title">مكتبة التطبيقات (Apps Library)</h2>
            <div id="app-grid" class="app-grid">
                </div>
            
            <button class="btn-owner" style="margin-top: 30px;" onclick="logout()">خروج و قفل الخزنة</button>
        </div>

    </div>

    <script>
        // المتغيرات الثابتة (يمكنك تعديلها هنا)
        const REGULAR_PASSWORD = "Bismillah";
        const OWNER_PASSWORD = "Cherrak Houari"; // كلمة مرور المالك
        const MIN_AGE = 12;
        const APPS_STORAGE_KEY = 'cherrak_infinity_apps_V3'; // تم تغيير المفتاح لعدم التعارض

        // عناصر HTML
        const lockScreen = document.getElementById('lock-screen');
        const ownerLogin = document.getElementById('owner-login');
        const dashboard = document.getElementById('dashboard');
        const appGrid = document.getElementById('app-grid');

        // وظيفة تسجيل الخروج
        function logout() {
            dashboard.style.display = 'none';
            ownerLogin.style.display = 'none';
            lockScreen.style.display = 'block';
            document.getElementById('pass-input').value = '';
            document.getElementById('age-input').value = '';
            document.getElementById('owner-pass-input').value = '';
            alert('تم قفل الخزنة بنجاح.');
        }

        // وظيفة التحقق من الوقت (بين 08:00 و 22:00)
        function checkTime() {
            const now = new Date();
            const hour = now.getHours();
            return hour >= 8 && hour < 22;
        }
        
        // 1. محاولة فتح الواجهة كزائر عادي
        function tryOpen() {
            const pass = document.getElementById('pass-input').value;
            const age = parseInt(document.getElementById('age-input').value);

            if (pass !== REGULAR_PASSWORD) {
                alert('كلمة المرور غير صحيحة.');
                return;
            }
            if (isNaN(age) || age <= MIN_AGE) {
                alert('غير مسموح. يجب أن يكون عمرك أكبر من 12 سنة.');
                return;
            }
            if (!checkTime()) {
                alert('الوقت غير مناسب. الخزنة تفتح فقط بين 08:00 و 22:00 (التوقيت المحلي لمتصفحك).');
                return;
            }

            // إذا نجحت جميع الشروط
            lockScreen.style.display = 'none';
            dashboard.style.display = 'block';
            renderApps();
        }

        // 2. إظهار حقل المالك
        function showOwnerLogin() {
            lockScreen.style.display = 'none';
            ownerLogin.style.display = 'block';
        }

        // 3. محاولة فتح الواجهة كمالك
        function tryOwnerOpen() {
            const pass = document.getElementById('owner-pass-input').value;

            if (pass !== OWNER_PASSWORD) {
                alert('كلمة مرور المالك غير صحيحة.');
                return;
            }

            // دخول المالك يتجاوز قيود العمر والوقت
            ownerLogin.style.display = 'none';
            dashboard.style.display = 'block';
            renderApps();
        }

        // 4. وظيفة إضافة تطبيق (تم إصلاح مشكلة الحفظ هنا)
        function addApp() {
            const name = document.getElementById('app-name-input').value.trim();
            const url = document.getElementById('app-url-input').value.trim();

            if (!name || !url || url.length < 5) {
                alert('الرجاء إدخال اسم ورابط (URL) صحيحين للتطبيق.');
                return;
            }

            // جلب التطبيقات المحفوظة
            const apps = getApps();

            // إضافة التطبيق الجديد
            apps.push({ name: name, url: url, id: Date.now() }); // إضافة ID فريد
            
            // حفظها في التخزين المحلي (Local Storage)
            localStorage.setItem(APPS_STORAGE_KEY, JSON.stringify(apps));

            alert(`تم إضافة تطبيق ${name} بنجاح!`);

            // مسح حقول الإدخال وتحديث القائمة
            document.getElementById('app-name-input').value = '';
            document.getElementById('app-url-input').value = '';
            renderApps();
        }
        
        // 5. وظيفة مسح جميع التطبيقات
        function clearAllApps() {
            if (confirm('هل أنت متأكد من مسح جميع التطبيقات المحفوظة؟ هذا الإجراء لا يمكن التراجع عنه.')) {
                localStorage.removeItem(APPS_STORAGE_KEY);
                alert('تم مسح جميع التطبيقات بنجاح.');
                renderApps();
            }
        }
        
        // 6. وظيفة حذف تطبيق فردي
        function deleteApp(id) {
            let apps = getApps();
            // تصفية وحذف التطبيق
            apps = apps.filter(app => app.id !== id);
            localStorage.setItem(APPS_STORAGE_KEY, JSON.stringify(apps));
            renderApps();
        }

        // 7. وظيفة جلب التطبيقات المحفوظة
        function getApps() {
            const storedApps = localStorage.getItem(APPS_STORAGE_KEY);
            return storedApps ? JSON.parse(storedApps) : [];
        }

        // 8. وظيفة عرض التطبيقات على الواجهة
        function renderApps() {
            const apps = getApps();
            appGrid.innerHTML = ''; // مسح المحتوى القديم

            if (apps.length === 0) {
                appGrid.innerHTML = '<p style="text-align: center; color: #888;">لا توجد تطبيقات محفوظة بعد. استخدم نموذج الإضافة أعلاه.</p>';
                return;
            }

            apps.forEach((app) => {
                const item = document.createElement('div');
                item.className = 'app-item';
                item.innerHTML = `
                    <button class="delete-btn" onclick="deleteApp(${app.id})">❌</button>
                    <a href="${app.url}" target="_blank">
                        <span style="font-size: 2em; display: block;">🤖</span>
                        <p>${app.name}</p>
                    </a>
                `;
                appGrid.appendChild(item);
            });
        }

        // إظهار شاشة القفل عند تحميل الصفحة
        document.addEventListener('DOMContentLoaded', () => {
             lockScreen.style.display = 'block';
        });
    </script>

</body>
</html>
