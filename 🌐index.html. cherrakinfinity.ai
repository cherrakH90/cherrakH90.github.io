
<html lang="ar" dir="rtl">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Infinity Gate — بوابة البصمة الذكية</title>
<style>
  /* ===== ألوان وخلفيات ===== */
  body, html {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #0a0a0a, #1a1a1a);
    overflow: hidden;
    color: #ffd700;
  }

  /* ===== شاشة التحميل ===== */
  #loadingScreen {
    position: absolute;
    width: 100%;
    height: 100%;
    background: #111;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 10;
  }
  #loadingScreen h1 {
    font-size: 2em;
    letter-spacing: 3px;
    animation: glow 1.5s infinite alternate;
  }
  @keyframes glow {
    from { text-shadow: 0 0 5px #ffd700, 0 0 10px #ffd700; }
    to { text-shadow: 0 0 20px #ffd700, 0 0 40px #ffd700; }
  }

  /* ===== بوابة البصمة ===== */
  #gate {
    display: none;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
  }
  #fingerprint {
    width: 120px;
    height: 120px;
    background: radial-gradient(circle, #ffd700 30%, #000000 70%);
    border-radius: 50%;
    box-shadow: 0 0 20px #ffd700;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  #fingerprint:hover {
    transform: scale(1.1);
    box-shadow: 0 0 40px #ffd700;
  }
  #fingerprint:active {
    transform: scale(0.95);
    box-shadow: 0 0 60px #ffd700;
  }

  /* ===== ضوء الدخول ===== */
  #lightEffect {
    position: absolute;
    width: 200%;
    height: 200%;
    top: -50%;
    left: -50%;
    background: radial-gradient(circle, rgba(255,215,0,0.8) 0%, rgba(0,0,0,0) 60%);
    opacity: 0;
    pointer-events: none;
    transition: opacity 1s;
    z-index: 5;
  }

  /* ===== العالم الداخلي ===== */
  #innerWorld {
    display: none;
    position: absolute;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #0a0a0a, #1a1a1a);
    justify-content: center;
    align-items: center;
    flex-direction: column;
    overflow: hidden;
  }
  .particle {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(circle, #ffd700 0%, rgba(255,215,0,0) 70%);
    animation: floatUp linear infinite;
  }
  @keyframes floatUp {
    from { transform: translateY(100vh) scale(0.5); opacity: 0.7; }
    to { transform: translateY(-10vh) scale(1); opacity: 0; }
  }

  /* ===== نص الترحيب ===== */
  #innerWorld h1 {
    font-size: 2em;
    text-align: center;
    text-shadow: 0 0 10px #ffd700, 0 0 20px #ffd700;
  }
</style>
</head>
<body>

<!-- شاشة التحميل -->
<div id="loadingScreen">
  <h1>جار التحميل…</h1>
</div>

<!-- بوابة البصمة -->
<div id="gate">
  <h2>ضع بصمتك للدخول</h2>
  <div id="fingerprint"></div>
</div>

<!-- ضوء ذهبي -->
<div id="lightEffect"></div>

<!-- العالم الداخلي -->
<div id="innerWorld">
  <h1>🌌 مرحبًا بك في العالم الداخلي!</h1>
</div>

<!-- الصوت -->
<audio id="doorSound" src="https://www.soundjay.com/door/door-1.mp3"></audio>

<script>
  // ===== شاشة التحميل =====
  setTimeout(() => {
    document.getElementById('loadingScreen').style.display = 'none';
    document.getElementById('gate').style.display = 'flex';
  }, 2500);

  // ===== التفاعل مع البصمة =====
  const fingerprint = document.getElementById('fingerprint');
  const doorSound = document.getElementById('doorSound');
  const lightEffect = document.getElementById('lightEffect');
  const innerWorld = document.getElementById('innerWorld');
  fingerprint.addEventListener('click', () => {
    doorSound.play();
    lightEffect.style.opacity = '1';
    setTimeout(() => {
      document.getElementById('gate').style.display = 'none';
      innerWorld.style.display = 'flex';
      createParticles(50);
    }, 2000);
  });

  // ===== توليد الجسيمات الذهبية =====
  function createParticles(count) {
    for (let i=0; i<count; i++) {
      let particle = document.createElement('div');
      particle.className = 'particle';
      particle.style.width = particle.style.height = Math.random() * 6 + 4 + 'px';
      particle.style.left = Math.random() * window.innerWidth + 'px';
      particle.style.animationDuration = (3 + Math.random() * 3) + 's';
      innerWorld.appendChild(particle);

      setTimeout(() => {
        particle.remove();
      }, 6000);
    }
  }
</script>

</body>
</html>
